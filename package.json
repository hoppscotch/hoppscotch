{
  "name": "hoppscotch",
  "version": "2.0.0",
  "description": "A free, fast and beautiful API request builder",
  "author": "liyasthomas",
  "private": true,
  "scripts": {
    "predev": "node build.js --dev",
    "dev": "nuxt",
    "prebuild": "node build.js",
    "build": "nuxt build",
    "start": "nuxt start",
    "pregenerate": "node build.js",
    "generate": "nuxt generate --modern",
    "pretty-quick": "pretty-quick --staged --pattern \"**/*.*(html|js|json|vue)\"",
    "test": "jest",
    "postinstall": "husky install"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": false,
    "printWidth": 100
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.12.4",
    "@nuxtjs/gtm": "^2.4.0",
    "@nuxtjs/robots": "^2.4.2",
    "@nuxtjs/sitemap": "^2.4.0",
    "@nuxtjs/toast": "^3.3.1",
    "ace-builds": "^1.4.12",
    "esprima": "^4.0.1",
    "firebase": "^8.2.1",
    "graphql": "^15.4.0",
    "graphql-language-service-interface": "^2.7.0",
    "mustache": "^4.1.0",
    "nuxt": "^2.14.12",
    "nuxt-i18n": "^6.16.0",
    "paho-mqtt": "^1.1.0",
    "socket.io-client": "^3.0.4",
    "socketio-wildcard": "^2.0.0",
    "v-tooltip": "^2.1.1",
    "vuejs-auto-complete": "^0.9.0",
    "vuex-persist": "^3.1.3",
    "yargs-parser": "^20.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@nuxtjs/color-mode": "^2.0.2",
    "@nuxtjs/google-analytics": "^2.4.0",
    "@nuxtjs/pwa": "^3.3.3",
    "@nuxtjs/tailwindcss": "^3.4.2",
    "@testing-library/jest-dom": "^5.11.8",
    "@vue/test-utils": "^1.1.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.17.0",
    "eslint-plugin-vue": "^7.4.0",
    "firebase-mock": "^2.3.2",
    "husky": "^5.0.6",
    "jest": "^26.6.3",
    "jest-serializer-vue": "^2.0.2",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "raw-loader": "^4.0.2",
    "sass": "^1.32.0",
    "sass-loader": "^10.1.0",
    "vue-jest": "^3.0.7",
    "worker-loader": "^3.0.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "watchman": false,
    "moduleNameMapper": {
      ".+\\.(svg)\\?inline$": "<rootDir>/__mocks__/svgMock.js",
      "^~/(.*)$": "<rootDir>/$1",
      "^~~/(.*)$": "<rootDir>/$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.(vue)$": "vue-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/components/**/*.vue",
      "<rootDir>/pages/*.vue"
    ],
    "testURL": "http://localhost/"
  }
}
